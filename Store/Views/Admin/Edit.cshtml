@model Item
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Edit Item</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Summary"></label>
                <input asp-for="Summary" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label>Categories</label>
                <div>
                    @foreach (var category in (MultiSelectList)ViewBag.Categories)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="CategoryIds" value="@category.Value" id="category_@category.Value"
                            @(category.Selected ? "checked" : "") />
                            <label class="form-check-label" for="category_@category.Value">@category.Text</label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <label for="Image">Select Image</label>
                <input type="file" class="form-control" id="Image" name="Image" />
            </div>
            <button type="submit" class="btn btn-primary mt-1">Save</button>
        </form>
    </div>
</div>
