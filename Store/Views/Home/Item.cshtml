@model Item

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Action("GetImage", "Image", new { id = Model.ImageId })" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <p><strong>Summary:</strong> @Model.Summary</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p>
                <strong>Categories:</strong>
                @foreach (var category in Model.Categories)
                {
                    @($"{category.Name} ")
                }
            </p>
        </div>
    </div>
</div>
